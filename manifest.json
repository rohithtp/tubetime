{
  "manifest_version": 3,
  "name": "TubeTime - YouTube Time Tracker",
  "version": "1.0.0",
  "description": "Track your YouTube usage time and export data to JSON",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TubeTime"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 