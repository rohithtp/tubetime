{
  "name": "tubetime",
  "version": "1.0.0",
  "description": "A Chrome extension to track YouTube usage time and export analytics to JSON",
  "main": "background.js",
  "scripts": {
    "build": "echo 'No build process needed for Chrome extension'",
    "test": "echo 'No tests specified'",
    "icons": "node generate-icons.js",
    "validate": "node -e \"console.log('Validating manifest.json...'); const manifest = require('./manifest.json'); console.log('âœ“ Manifest is valid JSON');\"",
    "package": "zip -r tubetime-extension.zip . -x '*.git*' 'node_modules/*' '*.DS_Store' '*.zip'"
  },
  "keywords": [
    "chrome-extension",
    "youtube",
    "time-tracking",
    "productivity",
    "analytics",
    "json-export"
  ],
  "author": "TubeTime Developer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tubetime.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tubetime/issues"
  },
  "homepage": "https://github.com/yourusername/tubetime#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {},
  "dependencies": {},
  "manifest": {
    "version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "downloads"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ]
  }
} 